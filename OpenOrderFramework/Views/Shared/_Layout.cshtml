<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Order Framework</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="/Content/card.css">
</head>
<body>

            <div class="bs-component">
                <div class="navbar navbar-inverse navbar-fixed-top">
                    <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("BHT-Book Store", "Index", "Home", null, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin Area <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                                            <li>@Html.ActionLink("Catagorie", "Index", "Catagories")</li>
                                 
                                            <li class="divider"></li>
                                            <li class="dropdown-header">Roles Admin</li>
                                            <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                                            <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                                        </ul>
                                    </li>
                                }
                                <li>@Html.ActionLink("Books", "Index", "Items")</li>
                                <li class="dropdown">
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                    
                                </li>
                            </ul>
                            
                            @Html.Partial("_LoginPartial")
                           
                        </div>

                    </div>
                </div>
                <br />
                <br />
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - ISNE#3</p>
                    </footer>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
</body>
</html>
